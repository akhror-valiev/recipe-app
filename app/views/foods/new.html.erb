<section>
  <h1>Add Food</h1>

  <%= form_with model: @food, url: foods_path, method: :post, local: true do |f|%>
    <%= f.label :name , "Food name", class:'form-label'%>
    <%= f.text_field :name, class:'form-control'%>
    <%= f.label :measurement_unit, "Measurement Unit", class:'form-label'%>
    <%= f.text_field :measurement_unit, class:'form-control' %>
    <%= f.label :price, "Price", class:'form-label' %>
    <%= f.number_field :price, class:'form-control'%>
    <%= f.label :quantity, "Quantity", class:'form-label' %>
    <%= f.number_field :quantity, class:'form-control'%>

    <%= f.submit %>
  <%end%>
</section>
